# ============================================================
# Yuki Bot 环境变量配置示例
# 使用说明：复制此文件为 .env 并填入你的配置
# ============================================================

# ============ NoneBot 基础配置 ============
# 监听地址（0.0.0.0 允许外部访问，127.0.0.1 只允许本机）
HOST=0.0.0.0
# 监听端口
PORT=8080
# 驱动器（使用 FastAPI）
DRIVER=~fastapi
# 调试模式（生产环境建议设为 false）
DEBUG=true
# 日志级别（DEBUG/INFO/WARNING/ERROR）
LOG_LEVEL=INFO

# ============ 命令配置 ============
# 命令起始字符（必须包含 "/"）
COMMAND_START=["/"]
# 命令分隔符（可选）
COMMAND_SEP=["."]

# ============ 管理员配置 ============
# 超级用户 QQ 号（可以使用管理命令，如 /reload）
# 请修改为你自己的 QQ 号
SUPERUSERS=["123456789"]

# ============ 机器人昵称 ============
# 群聊中叫这些名字也能触发对话（不需要 @）
NICKNAME=["Yuki","yuki","雪","小雪","月代雪"]

# ============ 复读插件配置 ============
REPEATER_GROUP=["all"]
REPEATER_MIN_MESSAGE_LENGTH=1
REPEATER_MIN_MESSAGE_TIMES=2
REPEATER_BLACKLIST=[]

# ============ 好感度系统配置 ============
# 好感度等级对应的 AI 模型温度（范围 0.4-1.3）
# 温度越高，回复越随机和富有创造性；温度越低，回复越稳定和一致
YUKI_AFF_TEMP_HATE=0.35          # -2阶：讨厌 (0.0-1.0)
YUKI_AFF_TEMP_BAD=0.38           # -1阶：差劲 (1.1-2.0)
YUKI_AFF_TEMP_UNNOTICED=0.40     # 0阶：不起眼 (2.1-3.0)
YUKI_AFF_TEMP_STRANGER=0.40      # 1阶：陌生 (3.1-4.0)
YUKI_AFF_TEMP_NORMAL=0.55        # 2阶：一般 (4.1-5.0)
YUKI_AFF_TEMP_LITTLE=0.70        # 3阶：稍熟 (5.1-6.0)
YUKI_AFF_TEMP_FAMILIAR=0.85      # 4阶：熟悉 (6.1-7.0)
YUKI_AFF_TEMP_WARM=0.80          # 5阶：热情 (7.1-8.0)
YUKI_AFF_TEMP_INTIMATE=0.65      # 6阶：亲密 (8.1-9.0)
YUKI_AFF_TEMP_LIKE=0.70          # 7阶：喜欢 (9.1-10.0)
YUKI_AFF_TEMP_LIKE_PLUS=0.80     # 8阶：喜欢+ (10.1-11.0)
YUKI_AFF_TEMP_ADORE=0.75         # 9阶：爱慕 (11.1-11.5)
YUKI_AFF_TEMP_DEEP_LOVE=0.70     # 10阶：深爱 (11.6-12.0)
YUKI_AFF_TEMP_TRUE_LOVE=0.65     # 11阶：挚爱 (12.1-12.5)
YUKI_AFF_TEMP_DESTINY=0.60       # 12阶：命运 (12.6-12.9)
YUKI_AFF_TEMP_ETERNAL=0.55       # 13阶：永恒 (13.0)

# ============ 数据库配置 ============
# SQLAlchemy 数据库连接 URL（用于色图插件等）
SQLALCHEMY_DATABASE_URL=sqlite+aiosqlite:///data/setu.db
# 跳过 Alembic 迁移检查（自动创建表）
ALEMBIC_STARTUP_CHECK=false

# ============ 色图插件配置 ============
# 是否允许 R18 内容（true/false）
SETU_R18=false
# R18 模式下最大图片数量（0 表示不限制，使用 SETU_MAX）
SETU_R18_MAX=10
# 普通模式下最大图片数量
SETU_MAX=30
# 冷却时间（秒）
SETU_CD=60
